{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "globals": {},
    "ignorePatterns": [
        "node_modules",
        ".github",
        ".vscode",
        ".devcontainer",
        "test",
        "bds_pages"
    ],
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "eqeqeq": 1
    }
}
